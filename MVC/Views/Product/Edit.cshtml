
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout.cshtml";
}

<h2>Edit Product Page</h2>

<form method="post">
    <div>
        <label>Product Id</label>
        <br />
        <label name="id" class="form-label">@ViewBag.product.id</label>
    </div>
    <div>
        <label>Product Name</label>
        <input type="text" name="ad" class="form-control" value="@ViewBag.product.ad" />
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-info">Kaydet</button>
    </div>
</form>
